# ===========================================
# RiseUp Youth Football League - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# Supabase
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# reCAPTCHA v3 (for spam protection)
# ===========================================
# Get these from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ===========================================
# Email (Resend)
# ===========================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key

# Email address to receive contact form submissions
CONTACT_EMAIL=admin@riseupyouthfootball.com

# ===========================================
# GiveButter (for donation widget)
# ===========================================
# Get from: GiveButter Dashboard -> Campaigns -> Select campaign -> Widgets -> Copy widget ID
NEXT_PUBLIC_GIVEBUTTER_WIDGET_ID=your-widget-id

# ===========================================
# Anthropic (for AI-powered content editing)
# ===========================================
# Get API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# Stripe (for sponsorship invoicing)
# ===========================================
# Get API keys from: https://dashboard.stripe.com/apikeys
# Secret key (server-side only - never expose to browser)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Publishable key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks -> Select endpoint -> Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
